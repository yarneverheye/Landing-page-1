  <script>
    document.getElementById('year').textContent=new Date().getFullYear();
    const form=document.forms.namedItem('waitlist');const btn=document.getElementById('btn');const ok=document.getElementById('ok');const bad=document.getElementById('bad');
    form.addEventListener('submit',function(){btn.disabled=true;});
    window.addEventListener('pageshow',function(){btn.disabled=false;});
    if(!location.hostname.endsWith('.netlify.app')){form.addEventListener('submit',function(e){e.preventDefault();try{const email=new FormData(form).get('email');if(!email)throw 0;const key='waitlist_emails';const x=JSON.parse(localStorage.getItem(key)||'[]');x.push({email,ts:new Date().toISOString()});localStorage.setItem(key,JSON.stringify(x));form.reset();ok.style.display='block';bad.style.display='none';}catch(_){ok.style.display='none';bad.style.display='block';}finally{btn.disabled=false;}});}
